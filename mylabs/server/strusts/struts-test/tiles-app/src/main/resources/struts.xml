<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />
	<include file="example.xml" />
	<!-- <package name="default" namespace="/" extends="struts-default"> <default-action-ref 
		name="index"/> <action name="index"> <result type="redirectAction"> <param 
		name="actionName">HelloWorld</param> <param name="namespace">/example</param> 
		</result> </action> </package> -->
	<package name="default" extends="struts-default">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
			<result-type name="ntiles" class="com.wxxr.nirvana.result.ProductResult" />
		</result-types>
		<action name="startProduct" method="startProduct"
			class="com.wxxr.nirvana.action.ProductAction">
			<result name="start" type="ntiles">${productName}</result>
		</action>

		<action name="goPage" method="goPage"
			class="com.wxxr.nirvana.action.ProductAction">
			<result name="go" type="ntiles">${pageName}</result>
		</action>

	</package>

	<package name="json" extends="json-default" namespace="/test">
		<action name="testByAction" class="com.wxxr.tiles.example.JsonTestAction"
			method="testByAction">
			<result type="json">
				<!-- 这里指定将被Struts2序列化的属性，该属性在action中必须有对应的getter方法 -->
				<param name="root">dataMap</param>
			</result>
		</action>
	</package>

	<!-- Add addition packages and configuration here. -->
</struts>
